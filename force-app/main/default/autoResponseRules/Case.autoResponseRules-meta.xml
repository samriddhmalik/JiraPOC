<?xml version="1.0" encoding="UTF-8"?>
<AutoResponseRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <autoResponseRule>
        <fullName>AU - WEB Auto Reply</fullName>
        <active>false</active>
        <ruleEntry>
            <criteriaItems>
                <field>Case.SuppliedEmail</field>
                <operation>contains</operation>
                <value>@tripadeal</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Origin</field>
                <operation>equals</operation>
                <value>Web</value>
            </criteriaItems>
            <notifyCcRecipients>false</notifyCcRecipients>
            <replyToEmail>enquiries@tripadeal.com.au</replyToEmail>
            <senderEmail>noreply@tripadeal.com.au</senderEmail>
            <senderName>TripADeal</senderName>
            <template>TAD/TAD_AutoReply_EmailCase</template>
        </ruleEntry>
    </autoResponseRule>
    <autoResponseRule>
        <fullName>Case-to-Email Auto-Response</fullName>
        <active>true</active>
        <ruleEntry>
            <criteriaItems>
                <field>Case.Origin</field>
                <operation>equals</operation>
                <value>Email</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.OwnerId</field>
                <operation>equals</operation>
                <value>Customer_Experience</value>
            </criteriaItems>
            <notifyCcRecipients>false</notifyCcRecipients>
            <replyToEmail>feedback@tripadeal.com.au</replyToEmail>
            <senderEmail>noreply@tripadeal.com.au</senderEmail>
            <senderName>TripADeal - Feedback</senderName>
            <template>Customer_Experience_Team/CX_AU_Feedback_Auto_Response</template>
        </ruleEntry>
    </autoResponseRule>
    <autoResponseRule>
        <fullName>NZ - WEB Auto Reply</fullName>
        <active>false</active>
        <ruleEntry>
            <criteriaItems>
                <field>Case.SuppliedEmail</field>
                <operation>contains</operation>
                <value>tripadeal</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Origin</field>
                <operation>equals</operation>
                <value>Web</value>
            </criteriaItems>
            <notifyCcRecipients>false</notifyCcRecipients>
            <senderEmail>noreply@tripadeal.co.nz</senderEmail>
            <senderName>TripADeal</senderName>
            <template>TAD/TAD_AutoReply_EmailCase</template>
        </ruleEntry>
    </autoResponseRule>
    <autoResponseRule>
        <fullName>TC Case</fullName>
        <active>false</active>
        <ruleEntry>
            <criteriaItems>
                <field>Case.SuppliedEmail</field>
                <operation>notContain</operation>
                <value>mynrma.com.au</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.SuppliedEmail</field>
                <operation>notContain</operation>
                <value>nrmatravel.com.au</value>
            </criteriaItems>
            <notifyCcRecipients>false</notifyCcRecipients>
            <senderEmail>noreply@tripadeal.com.au</senderEmail>
            <senderName>WholesaleSupport</senderName>
            <template>unfiled$public/SUPPORTWebtoCaseemailresponseSAMPLE</template>
        </ruleEntry>
    </autoResponseRule>
</AutoResponseRules>
