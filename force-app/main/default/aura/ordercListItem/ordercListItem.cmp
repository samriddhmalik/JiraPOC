<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >

    <aura:attribute name="order" type="order__c"/>
    <aura:attribute name="tags" type="String[]"/>
    <aura:attribute name="type" type="String" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <tr>
        <th scope="row" data-label="Order Name">
            <div class="slds-truncate" title="Order Name"><a href="{!v.type == 'TC' ? 'https://www.wholesale.tripadeal.com.au/s/order/' + v.order.Id + '/' + v.order.Name :
                    'https://tad.force.com/NRMA/s/order/' + v.order.Id + '/' + v.order.Name}">{!v.order.Name}</a></div>
        </th>
        <td data-label="Status">
            <div class="slds-truncate" title="Status">{!v.order.TC_Booking_Status__c}</div>
        </td>
        <td data-label="Purchaser Full Name">
            <div class="slds-truncate" title="4/14/2015">{!v.order.full_name_purchaser__c}</div>
        </td>
        <td data-label="Purchaser Email">
            <div class="slds-truncate" title="Purchaser Email">{!v.order.email_purchaser__c}</div>
        </td>
        <td data-label="Description">
            <div class="slds-truncate" title="Description">{!v.order.Deal_ID__c + ' | ' + v.order.Deal_and_Option__c}</div>
        </td>
        <td data-label="Amount">
            <div class="slds-truncate" title="Amount">${!v.order.grand_total__c}</div>
        </td>
        <td data-label="Consultant">
            <div class="slds-truncate" title="Consultant">{!v.order.agent_name__c}</div>
        </td>
    </tr>
</aura:component>