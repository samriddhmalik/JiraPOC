<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>ordexp_why_is_this_required__c</field>
        <field>ordexp_Orders_Ticketed_Or_Booked__c</field>
        <field>ordexp_Additional_comments__c</field>
        <field>ordexp_Options_availbale_to_customers__c</field>
        <field>ordexp_Alternate_option_meet_min_not_met__c</field>
        <field>ordexp_Total_Order_Price__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Min_Not_Met_Product_Accepted</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>maite@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1 Product Manager</label>
        <name>Step_1_Product_Manager</name>
        <rejectionActions>
            <action>
                <name>Min_Not_Met_Product_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Min_numbers_not_met_Product_Manager_Rejection</name>
                <type>Alert</type>
            </action>
            <action>
                <name>MinNotMetApprovalUpdateProduct</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Min_Not_Met_Finance_Accepted</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>benjamin.dowling@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>departures_dates__c.ordexp_Total_Order_Price__c</field>
                <operation>greaterThan</operation>
                <value>AUD 500</value>
            </criteriaItems>
        </entryCriteria>
        <label>Step 2 Finance Manager</label>
        <name>Step_2_Finance_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Min_Not_Met_Finance_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Min_numbers_not_met_Finance_Manager_Rejection</name>
                <type>Alert</type>
            </action>
            <action>
                <name>MinNotMetApprovalUpdateFinance</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Min_numbers_not_met_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>departures_dates__c.MinNotMetApproval__c</field>
            <operation>equals</operation>
            <value>In Progress</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approved_Status_Rejection</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approved_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Min Number Not Met Approval</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
