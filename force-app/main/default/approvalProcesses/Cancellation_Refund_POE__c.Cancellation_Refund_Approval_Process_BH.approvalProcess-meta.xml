<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>ordexp_tad_order__c</field>
        <field>Total_Cancellation_Amount__c</field>
        <field>Approval_Status__c</field>
        <field>CS_Refund_Rejection_Reason__c</field>
        <field>Finance_Refund_Rejection_Reason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Booking_Hotel_Update_Can_Refund_Status</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>kristy.hanslow@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Cancellation_Refund_POE__c.Approval_Status__c</field>
                <operation>equals</operation>
                <value>Pending Finance Approval</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Finance Approval</label>
        <name>Finance_Approval</name>
        <rejectionActions>
            <action>
                <name>Update_Can_Refund_Status_to_Finance_Reje</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Cancellation_Refund_Email_Template_For_Booking_Hotel</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Cancellation_Refund_POE__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>Pending Finance Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approved_Status_Rejection</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CXL_Refund_Rejection_Notification_from_Finance</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approved_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Initial_Submitter_Email_Capture</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Cancellation/Refund Approval Process BH</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
