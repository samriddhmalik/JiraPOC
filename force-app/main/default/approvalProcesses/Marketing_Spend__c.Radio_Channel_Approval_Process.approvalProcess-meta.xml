<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>ms_Channel_Name__c</field>
        <field>Deal__c</field>
        <field>InventoryName__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>sachin@psagtechnologies.com.p1</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Product Approval</label>
        <name>Product_Approval</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Marketing_Spend__c.ms_Channel_Name__c</field>
            <operation>equals</operation>
            <value>Radio</value>
        </criteriaItems>
        <criteriaItems>
            <field>Marketing_Spend__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>In Progress</value>
        </criteriaItems>
        <criteriaItems>
            <field>Marketing_Spend__c.Sub_status__c</field>
            <operation>equals</operation>
            <value>Script received from Thumpe Media</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Radio_Final_Approval_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Radio_Substatus_Final_Field_Update</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Radio_Final_Rejection_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Radio_Substatus_Rejection_Update</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Radio_Channel_Initial_Submit_For_Approval_Alert</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Radio_Initial_Update</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Radio Channel Approval Process</label>
    <processOrder>5</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
