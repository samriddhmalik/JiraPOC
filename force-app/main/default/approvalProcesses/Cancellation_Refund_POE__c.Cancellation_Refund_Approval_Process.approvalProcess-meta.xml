<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>CS_Group_for_Cancellations_Refunds</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>ordexp_tad_order__c</field>
        <field>Total_Cancellation_Amount__c</field>
        <field>Approval_Status__c</field>
        <field>CS_Refund_Rejection_Reason__c</field>
        <field>Finance_Refund_Rejection_Reason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Email_Alert_to_Finance_team_member</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Can_Refund_Status_to_CS_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>luke@phoneaflight.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>melanie.king-prime@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>tim.hillard@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>CS Approval</label>
        <name>CS_Approval</name>
        <rejectionActions>
            <action>
                <name>Update_Can_Refund_Status_to_CS_Rejected</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Can_Refund_Status_to_Finance_Appr</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>kristy.hanslow@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>lilian.sweetnam@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>monica.mcdonald2@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <approver>
                <name>rhian.hughes@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <booleanFilter>1 AND 2 AND (3 OR 4)</booleanFilter>
            <criteriaItems>
                <field>Cancellation_Refund_POE__c.Approval_Status__c</field>
                <operation>equals</operation>
                <value>CS Approved</value>
            </criteriaItems>
            <criteriaItems>
                <field>Cancellation_Refund_POE__c.Total_Cancellation_Amount__c</field>
                <operation>greaterThan</operation>
                <value>&quot;AUD 10,000&quot;</value>
            </criteriaItems>
            <criteriaItems>
                <field>Cancellation_Refund_POE__c.Coupon_Amount__c</field>
                <operation>greaterThan</operation>
                <value>AUD 0</value>
            </criteriaItems>
            <criteriaItems>
                <field>Cancellation_Refund_POE__c.Refund_Amount__c</field>
                <operation>greaterThan</operation>
                <value>AUD 0</value>
            </criteriaItems>
        </entryCriteria>
        <label>Finance Approval</label>
        <name>Finance_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Update_Can_Refund_Status_to_Finance_Reje</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <emailTemplate>unfiled$public/Cancellation_Refund_Email_Template_For_CS</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Cancellation_Refund_POE__c.Approval_Status__c</field>
            <operation>equals</operation>
            <value>Pending CS Approval</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approved_Status_Rejection</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>CXL_Refund_Rejection_Notification_from_Finance</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approved_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Initial_Submitter_Email_Capture</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Cancellation/Refund Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
