<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>CreatedBy</field>
        <field>Name__c</field>
        <field>Discount__c</field>
        <field>usable_count__c</field>
        <field>Min_order_value__c</field>
        <field>account__c</field>
        <field>transferrable_amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>chris.cowan@tripadeal.com.au</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Approving manager must approve all coupons that are created</description>
        <label>Approving Manager Check</label>
        <name>Approving_Manager_Check</name>
    </approvalStep>
    <description>Automates coupon approvals</description>
    <emailTemplate>Coupon_Request_Responses/Coupon_Approval_Request</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>coupon__c.Discount__c</field>
            <operation>greaterOrEqual</operation>
            <value>AUD 500</value>
        </criteriaItems>
        <criteriaItems>
            <field>coupon__c.Name__c</field>
            <operation>notContain</operation>
            <value>NRMA100</value>
        </criteriaItems>
        <criteriaItems>
            <field>coupon__c.NC500__c</field>
            <operation>notEqual</operation>
            <value>True</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Coupon_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Enable_Coupon</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Coupon_Denied</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Disable_Coupon</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Coupon Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
