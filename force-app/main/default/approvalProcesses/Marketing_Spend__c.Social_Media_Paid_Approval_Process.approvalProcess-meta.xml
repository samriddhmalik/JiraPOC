        </criteriaItems>
        <criteriaItems>
            <field>Marketing_Spend__c.ms_Channel_Name__c</field>
            <operation>equals</operation>
            <value>Social</value>
        </criteriaItems>
        <criteriaItems>
            <field>Marketing_Spend__c.ms_Placement__c</field>
            <operation>equals</operation>
            <value>Paid</value>
        </criteriaItems>
