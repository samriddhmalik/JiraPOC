            </action>
            <action>
                <name>Social_Pend_Prod_Approval</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>sachin@psagtechnologies.com.p1</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Product Approval</label>
        <name>Product_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Final_Rejection_Pending_Product_Approval</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Social_Final_Rejection_Update</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Marketing_Spend__c.Approval_Status__c</field>
            <operation>equals</operation>
