            </action>
            <action>
                <name>Social_Field_Update</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>sachin@psagtechnologies.com.p1</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Publishing Approval</label>
        <name>Publishing_Approval</name>
        <rejectionActions>
            <action>
                <name>Final_Rejection_Pending_Publishing_Approval</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Social_Rejection_Field_Update</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Social_Final_Field_Update</name>
