<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Solo</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL( QTY__c , &apos;1&apos;) , NOT( Solo_Traveller__c ) )</errorConditionFormula>
    <errorDisplayField>Solo_Traveller__c</errorDisplayField>
    <errorMessage>If QTY is 1, Solo traveller must be selected.</errorMessage>
</ValidationRule>
