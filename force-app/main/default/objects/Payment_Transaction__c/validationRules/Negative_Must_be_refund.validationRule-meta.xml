<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Negative_Must_be_refund</fullName>
    <active>true</active>
    <description>Negative amounts should be &apos;Refund&apos; Type</description>
    <errorConditionFormula>AND(
ISPICKVAL( transaction_type__c , &quot;Payment&quot;),
OR( amount_original__c &lt; 0 , amount_charged__c &lt; 0 )
)</errorConditionFormula>
    <errorDisplayField>transaction_type__c</errorDisplayField>
    <errorMessage>Negative amounts should be &apos;Refund&apos; Type</errorMessage>
</ValidationRule>
