<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Deal_Publishing_AU_Needs_Fin_Approval</fullName>
    <active>false</active>
    <errorConditionFormula>AND( ISCHANGED( Status__c ) ,OR(ISPICKVAL(Status__c,&quot;Hero&quot;),ISPICKVAL(Status__c,&quot;Published&quot;)),
OR( ((Finance_Approval_Date_Submitted__c + 365)  &lt;= TODAY()), ISNULL(Finance_Approval_Date_Submitted__c)) 
)</errorConditionFormula>
    <errorDisplayField>Additional_Charges__c</errorDisplayField>
    <errorMessage>Deal Cannot be published. Please ensure that deal has been submitted for approval (Product)</errorMessage>
</ValidationRule>
