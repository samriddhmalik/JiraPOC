<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Deal_Publishing_AU_Needs_GST_Treat</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISCHANGED( Status__c ) ,
OR(ISPICKVAL(Status__c,&quot;Hero&quot;),ISPICKVAL(Status__c,&quot;Published&quot;)),
ISPICKVAL(GST_AU__c,&quot;&quot; )
)</errorConditionFormula>
    <errorDisplayField>GST_AU__c</errorDisplayField>
    <errorMessage>Deal Cannot be published. Deal needs GST Treatment to be nominated (Finance)</errorMessage>
</ValidationRule>
