<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>SB_Need_Nights</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
NOT(ISBLANK(sb__c)), 
OR(SB_Nights__c &lt; 1,ISBLANK(SB_Nights__c)), 
ISBLANK(sb_date__c), 
NOT($Permission.SB_Need_Nights) 
)</errorConditionFormula>
    <errorMessage>SB Selected - Please Nominate SB nights required or SB date required</errorMessage>
</ValidationRule>
