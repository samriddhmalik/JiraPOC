<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Incorrect_Deal_for_Record_Type</fullName>
    <active>true</active>
    <errorConditionFormula>OR(
AND(OR(
RecordType.Name = &quot;TAD&quot;,RecordType.Name = &quot;TC&quot;,RecordType.Name = &quot;NRMA&quot;),NOT(INCLUDES(deal__r.site__c,&quot;AU&quot;))
),
AND(OR(
RecordType.Name = &quot;TNZ&quot;,RecordType.Name = &quot;WT&quot;),NOT(INCLUDES(deal__r.site__c,&quot;NZ&quot;))
)
)</errorConditionFormula>
    <errorDisplayField>deal__c</errorDisplayField>
    <errorMessage>Sorry Homie, This deal is not available for the chosen record type!</errorMessage>
</ValidationRule>
