<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Quote_Approval_Status_Equals_Decline</fullName>
    <active>false</active>
    <errorConditionFormula>AND(ISPICKVAL( Quote_Approval_Status__c , &quot;Decline&quot;), 
   ISBLANK( mp_Quote_Decline_Reason__c ) )</errorConditionFormula>
    <errorMessage>If Quote Status is &apos;Decline&apos;, Decline Reason cannot be empty.</errorMessage>
</ValidationRule>
