TAD Order&apos;s ordexp_final_departure_date__c is equal to 365 days</description>
        <name>Create_Order_Comms_Record</name>
        <label>Create Order Comms Record</label>
        <locationX>314</locationX>
        <locationY>396</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Deal_country_c_is_Australia</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ordexp_deal__r.Country__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Australia</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Departure_Date_PC__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>DateAfter365Days</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.ordexp_account__r.PersonHasOptedOutOfEmail</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Order_Comms_for_Australia</targetReference>
            </connector>
            <label>Deal country__c is Australia</label>
        </rules>
        <rules>
            <name>Deal_country_c_is_NOT_Australia</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.ordexp_deal__r.Country__c</leftValueReference>
                <operator>NotEqualTo</operator>
                <rightValue>
                    <stringValue>Australia</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Departure_Date_PC__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference>DateAfter365Days</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.ordexp_account__r.PersonHasOptedOutOfEmail</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Order_Comms_Not_for_Australia</targetReference>
            </connector>
            <label>Deal country__c is NOT Australia</label>
        </rules>
    </decisions>
