    <rules>
        <fullName>Replacement pax details not received %2824hours%29</fullName>
        <active>true</active>
        <criteriaItems>
            <field>customer__c.Passenger_Replacement__c</field>
            <operation>equals</operation>
            <value>Allow Replacement</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Replacement_Pax_Details_not_yet_Received</name>
                <type>Alert</type>
            </actions>
            <timeLength>1</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
