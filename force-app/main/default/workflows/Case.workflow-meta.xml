    <rules>
        <fullName>Case Created By Merchant Notification</fullName>
        <actions>
            <name>Case_Creation_Notification_To_Logistic</name>
            <type>Alert</type>
        </actions>
        <actions>
            <name>Case_Owner_Update</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.RecordTypeId</field>
            <operation>equals</operation>
            <value>Logistics (Partner)</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Case_Created_By_Merchant__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>Notification to logistic when case is created by merchant</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Set New CASE</fullName>
        <actions>
            <name>Status_New</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.Origin</field>
            <operation>equals</operation>
            <value>Email,Web</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
