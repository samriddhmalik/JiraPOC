    <alerts>
        <fullName>Phone_Sale_held_voucher_due_to_expire</fullName>
        <description>Phone Sale held voucher due to expire</description>
        <protected>false</protected>
        <recipients>
            <field>Email_Purchaser__c</field>
            <type>email</type>
        </recipients>
        <senderAddress>noreply@tripadeal.com.au</senderAddress>
