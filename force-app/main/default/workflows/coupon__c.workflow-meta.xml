    <rules>
        <fullName>AP Feefo retrieve survey voucher</fullName>
        <actions>
            <name>Update_Coupon_Sent</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Send_Coupon</name>
            <type>OutboundMessage</type>
        </actions>
        <active>false</active>
        <booleanFilter>1 AND 2</booleanFilter>
        <criteriaItems>
            <field>coupon__c.Is_From_Feefo__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>coupon__c.Coupon_code_sent_to_AP__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>Zapier - Send voucher coupon via AP
Autopilot - welcome home &amp; voucher send journey</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Loyalty Coupon</fullName>
        <actions>
            <name>send_webhook</name>
            <type>OutboundMessage</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>coupon__c.Loyalty__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
